//- mixin 變數  eng英文名稱  chi中文名稱
//- title
mixin title(eng,chi)
    div(class="title-box")
        h3(class="title1")=eng
        h1(class="title2")=chi
        img(src="images/line.png",alt="線條")
//- cake區塊
mixin product-box(img,caketitle,caketext)
    div(class=product)
        a(href="#")
            img(src="images/"+ img +".png", alt="產品照片")
            hr
            h3=caketitle
            p=caketext

